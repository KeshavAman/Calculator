<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/viewExpression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/actionButton"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/viewResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="35sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonClear"
                style="@style/ActionButtonStyle"
                android:text="AC"
                android:textStyle="bold"
                android:background="@drawable/rounded_textview3"/>

            <TextView
                android:id="@+id/buttonOpenningBracket"
                style="@style/ActionButtonStyle"
                android:text="("
                android:textStyle="bold"
                android:background="@drawable/rounded_textview3"/>

            <TextView
                android:id="@+id/buttonClosingBracket"
                style="@style/ActionButtonStyle"
                android:text=")"
                android:textStyle="bold"
                android:background="@drawable/rounded_textview3"/>

            <TextView
                android:id="@+id/buttonDivide"
                style="@style/ActionButtonStyle"
                android:text="/"
                android:textStyle="bold"
                android:background="@drawable/rounded_textview2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonSeven"
                style="@style/NumberButtonStyle"
                android:text="7"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonEight"
                style="@style/NumberButtonStyle"
                android:text="8"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonNine"
                style="@style/NumberButtonStyle"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="9"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buttonMultiply"
                style="@style/NumberActionButton2"
                android:text="*"
                android:background="@drawable/rounded_textview2"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/buttonFour"
                style="@style/NumberButtonStyle"
                android:text="4"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonFive"
                style="@style/NumberButtonStyle"
                android:text="5"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonSix"
                style="@style/NumberButtonStyle"
                android:text="6"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonMinus"
                style="@style/NumberActionButton2"
                android:text="-"
                android:background="@drawable/rounded_textview2"
                android:gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonOne"
                style="@style/NumberButtonStyle"
                android:text="1"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"
                android:clickable="true"
                />

            <TextView
                android:id="@+id/buttonTwo"
                style="@style/NumberButtonStyle"
                android:text="2"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonThree"
                style="@style/NumberButtonStyle"
                android:text="3"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonAdd"
                style="@style/NumberActionButton2"
                android:text="+"
                android:background="@drawable/rounded_textview2"
                android:gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonZero"
                style="@style/NumberButtonStyle"
                android:text="0"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonDot"
                style="@style/NumberButtonStyle"
                android:text="."
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonBack"
                style="@style/NumberButtonStyle"
                android:text="DELETE"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonEqual"
                style="@style/NumberActionButton2"
                android:text="="
                android:background="@drawable/rounded_textview2"
                android:gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>